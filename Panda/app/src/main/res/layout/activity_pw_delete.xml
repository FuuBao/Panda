<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PwDeleteActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="암호 삭제"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="@color/green"
        android:fontFamily="@font/lottebold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 암호를 입력해주세요."
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/lottebold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:id="@+id/currentPw"
        android:fontFamily="@font/lottelight"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다시 입력해주세요."
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/lottebold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:id="@+id/currentPwconfirm"
        android:fontFamily="@font/lottelight"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center">

        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@color/green"
            android:text="삭제"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/lottelight"
            android:id="@+id/but_delete"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@color/green"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/lottelight"
            android:id="@+id/but_cancel"/>

    </TableRow>

</LinearLayout>